{
    "name": "hc-sr04",
    "Description": "Measurement distance in centimeters",
    "TYPE": "Sensor Input",
    "PIN":{
        "Digital": 2,
        "Analog": 0,
        "I2C": false,
        "SPI": false,
        "Serial": false
    },
    "PINMODE":{
        "INPUT": 1,
        "OUTPUT": 1
    },
    "no PINMODE": true, 
    "Library": ["HCSR04"],
    "header1": [
"#include <HCSR04.h>"
            ],
    "header2":[ 
"hc-sr04_sensor_id(hc-sr04pin_custom_input, hc-sr04);"
    ],
    "custom pin key":["hc-sr04pin_custom_input", null],
    "custom id key":"hc-sr04_sensor_id",
    "code_in_setup": [
"UltraSonicDistanceSensor distanceSensor(triggerPin, echoPin);"
    ],
    "code_function": [
"float distanceSensor.measureDistanceCm();"
    ],
    "function_list": {
        "distance": "hc-sr04readDistance(hc-sr04_sensor_id);"
    },
    "var type": {
        "distance": "float" 
    }

}